{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"-std=c++2a",
				"${workspaceFolder}\\SourceFiles\\Instr_BaseClass.cpp",
				"${workspaceFolder}\\SourceFiles\\J_instrClass.cpp",
				"${workspaceFolder}\\SourceFiles\\main.cpp",
				"${workspaceFolder}\\SourceFiles\\RI_instrClass.cpp",
				"${workspaceFolder}\\SourceFiles\\R_instrClass.cpp",
				"${workspaceFolder}\\SourceFiles\\I_instrClass.cpp",
				"${workspaceFolder}\\SourceFiles\\Exp_InstrClass.cpp",

				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}